<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addressItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="12dp"
    android:paddingVertical="8dp"
    android:background="@drawable/ripple_address_background"
    android:clickable="true"
    android:focusable="true">

    <!-- Icon bên trái -->
    <ImageView
        android:id="@+id/iconLocation"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/located_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Text địa chỉ -->
    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="FEEL Coffee Tee Express, 82 Đ. Vành Đai\nĐông Hoà, Dĩ An, Bình Dương"
        android:textColor="@color/secondary_400"
        android:textSize="16sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        app:layout_constraintStart_toEndOf="@id/iconLocation"
        app:layout_constraintEnd_toStartOf="@id/iconEditAddress"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp" />

    <!-- Icon bên phải -->
    <ImageView
        android:id="@+id/iconEditAddress"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/located_update_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
